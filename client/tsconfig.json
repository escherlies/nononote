{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "target": "ES5",
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "dom"
    ],
    "outDir": "out"
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "lib-amd"
  ]
}